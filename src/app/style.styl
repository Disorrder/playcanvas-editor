// --- bacgrounds ---
for i in (0..10)
    .bg-{i}
        background rgba( hue(#bed, i*360/10), 0.7 )
        // background rgba( mix(#fff, #bed, 20*i), 0.5 )

.bg-panel
    background rgba(255, 255, 255, 0.2)

.bg-tea
    background rgba(187, 238, 221, 0.1)
