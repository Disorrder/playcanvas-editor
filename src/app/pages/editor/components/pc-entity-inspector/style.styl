.pc-entity-inspector

    .entity-attr
        display flex
        // justify-content
        align-items center
        min-height 2em
        height fit-content
        line-height 1.5em

        .attr-name
            width 20%
            min-width 100px
            padding 0 0.25rem
            margin-bottom 0
            color #ddd

        .attr-value
            color #ddd
            margin 0 0.125rem
            flex 1 1 auto

        .attr-value > input[type="text"]
            width 100%
            color inherit
            padding 0 0.5rem
            background #2c393c
            border 0
            border-bottom 2px solid #888

            &:hover
                background #20292b
                border-bottom-color #aaa

            &:focus
                outline 0
                background #20292b
                border-bottom-color orange

    .entity-attr-vec
        .attr-value
            display flex
            margin 0

            & > input
                flex 1 1 auto
                margin 0 2px


    .entity-component
        //
        .v-expansion-panel
            &__header
                height 35px
                padding 0 1rem
                line-height 2.5em
                background #293538

    .ui-panel
        // color white
        margin 0.25rem 0
        border 1px solid #293538

        .ui-panel-header
            padding 0.25rem
            background #364346

        .ui-panel-body
            padding 0.25rem

