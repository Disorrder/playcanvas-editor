.pc-entity-inspector(:data-name="entity.name" :data-guid="entity._guid")
    header.ui-header Entity
    .px-2
        .entity-attr.entity-attr-boolean
            label.attr-name Enabled
            .attr-value: input(:value="entity.enabled" type="checkbox")
        .entity-attr.entity-attr-string
            label.attr-name Name
            .attr-value: input.animated(v-model="entity.name" type="text")
                
        .entity-attr.entity-attr-vec
            label.attr-name Position
            .attr-value: input.animated(v-model="position.x" @blur="setPosition" type="text")
            .attr-value: input.animated(v-model="position.y" @blur="setPosition" type="text")
            .attr-value: input.animated(v-model="position.z" @blur="setPosition" type="text")
        .entity-attr.entity-attr-vec
            label.attr-name Rotation
            .attr-value: input.animated(v-model="rotation.x" @blur="setRotation" type="text")
            .attr-value: input.animated(v-model="rotation.y" @blur="setRotation" type="text")
            .attr-value: input.animated(v-model="rotation.z" @blur="setRotation" type="text")
        .entity-attr.entity-attr-vec
            label.attr-name Scale
            .attr-value: input.animated(v-model="scale.x" @blur="setScale" type="text")
            .attr-value: input.animated(v-model="scale.y" @blur="setScale" type="text")
            .attr-value: input.animated(v-model="scale.z" @blur="setScale" type="text")

            
